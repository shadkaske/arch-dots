# vim: set ft=sxhkdrc:

# make sxhkd reload its configuration files:
alt + shift + Escape
	pkill -USR1 -x sxhkd

# MPD Controls
XF86AudioPlay
	mpc toggle

XF86Audio{Next,Prev}
    mpc {next,prev}

# Dmenu Scripts
alt + super + {v,r,n,b,e}
    dmenu-{greenclip,remmina,networkmanager,qutebrowser,edit-configs}

alt + super + {s,m,i}
    dmenu-{audio-select,mpd,virtmanager}

alt + super + c
    dmenu-calculator --dmenu=/usr/local/bin/dmenu

super + @Tab
    dmenu-window-select

alt + super + {l,p}
    {dmenu-lastpass copy,bitwarden-dmenu}

super + shift + p
    j4-dmenu-desktop

# Lockscreen
super + @Escape
    betterlockscreen -l dimblur
