#!/bin/bash

session="printApp"

sessionexists=$($tmux ls | grep $session)

if [ "$sessionexists" = "" ]
then
    # Start the tmux session detached
    tmux new-session -d -s $session

    # Setup editor window
    tmux rename-window -t 1 'Editor'
    tmux send-keys -t 'Editor' '~/Code/printapp' C-m 'nvim' C-m

    # setup server window
    tmux new-window -t $session:2 -n 'Server'
    tmux send-keys -t 'Server' '~/Code/printapp' C-m 'vagrant up' C-m

fi

tmux attach-session -t $session:1 -c $HOME/Code/printapp

# vi: ft=sh
